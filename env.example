# ========================================
# CONFIGURAÇÕES DO BOATHOUSE
# ========================================

# Chave secreta para sessões e tokens
SECRET_KEY=sua_chave_secreta_muito_segura_aqui_32_caracteres

# Configuração do banco de dados
# Para desenvolvimento (SQLite):
DATABASE_URI=sqlite:///boathouse.db

# Para produção (PostgreSQL):
# DATABASE_URI=postgresql://usuario:senha@localhost/boathouse

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================

# Ambiente da aplicação
FLASK_ENV=development
FLASK_DEBUG=True

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================

# Proteção CSRF
WTF_CSRF_ENABLED=True
WTF_CSRF_SECRET_KEY=sua_chave_csrf_segura_aqui

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================

# Configurações do servidor de email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_de_app

# ========================================
# CONFIGURAÇÕES DO ASAAS (PAGAMENTOS)
# ========================================

# Chave da API do Asaas
ASAAS_API_KEY=sua_chave_api_asaas
ASAAS_ENVIRONMENT=sandbox  # ou 'production'

# ========================================
# CONFIGURAÇÕES DE UPLOAD
# ========================================

# Tamanho máximo de upload (em bytes)
MAX_CONTENT_LENGTH=16777216  # 16MB

# Pasta de uploads
UPLOAD_FOLDER=uploads

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================

# Nível de log
LOG_LEVEL=INFO

# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================

# Host e porta para produção
HOST=0.0.0.0
PORT=5000

# Configurações de proxy
PROXY_FIX_X_FOR=1
PROXY_FIX_X_PROTO=1
PROXY_FIX_X_HOST=1
PROXY_FIX_X_PORT=1
PROXY_FIX_X_PREFIX=1 